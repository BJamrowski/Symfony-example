{% extends('base.html.twig') %}

{% block body %}
{{ form(form) }}
    {% if cars %}
        <table class="table">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Model</th>
                <th scope="col">Mark</th>
                <th scope="col">Year</th>
                <th scope="col">Color</th>
                <th scope="col">View car</th>
            </tr>
            </thead>
            <tbody>
            {% for car in cars %}
                <tr>
                    <th scope="row">{{ car.id }}</th>
                    <td>{{ car.model }}</td>
                    <td>{{ car.mark }}</td>
                    <td>{{ car.year|date("m/d/Y")}}</td>
                    <td>{{ car.color }}</td>
                    <td>
                        <a href="{{ path('singleCar', {id: car.id}) }}">Go to</a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}